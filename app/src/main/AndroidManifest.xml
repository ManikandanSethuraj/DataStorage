<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manikandansethuraj.datastorage" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SharedPreferences"
            android:label="@string/title_activity_shared_preferences"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SharedPreferencesB"
            android:label="@string/title_activity_shared_preferences_b"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".InternalStorageA"
            android:label="@string/title_activity_internal_storage"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".InternalStorageB"
            android:label="@string/title_activity_internal_storage_b"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
