<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_shared_preferences_b"
    tools:context="com.manikandansethuraj.datastorage.SharedPreferencesB">

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/load"
       android:layout_alignParentLeft="true"
       android:layout_marginRight="80dp"
       android:layout_alignParentTop="true"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="30dp"
       android:text="load"
       android:onClick="load"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/previous"
        android:layout_toRightOf="@+id/load"
        android:layout_marginTop="30dp"
        android:text="next"
        android:onClick="previous"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_toLeftOf="@+id/usernametext"
        android:layout_below="@+id/load"
        android:text="UserName"
        android:textSize="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="45dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernametext"




        android:layout_alignBottom="@+id/textView3"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/load"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_toLeftOf="@+id/passowrdtext"
        android:text="Password"
        android:textSize="25dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passowrdtext"


        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView3"
        android:layout_alignRight="@+id/usernametext"
        android:layout_alignEnd="@+id/usernametext"
        android:layout_alignTop="@+id/textView4" />


</RelativeLayout>
